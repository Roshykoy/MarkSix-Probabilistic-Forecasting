# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf
*.pyi text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.pkl binary
*.pth binary
*.jpg binary
*.png binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Jupyter notebooks (treat as text but handle outputs carefully)
*.ipynb text eol=lf linguist-generated=false

# Data files
*.csv text eol=lf
*.tsv text eol=lf

# Log files
*.log text eol=lf

# Requirements files
requirements*.txt text eol=lf

# Project specific files
CLAUDE.md text eol=lf
*.summary text eol=lf

# Large files that should use Git LFS (if needed in future)
# *.pth filter=lfs diff=lfs merge=lfs -text
# *.pkl filter=lfs diff=lfs merge=lfs -text