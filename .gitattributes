# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf
*.pyi text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.pkl binary
*.pth binary
*.jpg binary
*.png binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary